<Window x:Class="ToDoList_WPF.Finestra_Tasca"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToDoList_WPF"
        mc:Ignorable="d"
        Title="Tasca" Height="450" Width="800" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="4*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100*" />
            <RowDefinition Height="150*" />
            <RowDefinition Height="50*" />
            <RowDefinition Height="50*" />
            <RowDefinition Height="150*" />
        </Grid.RowDefinitions>
        <Label VerticalAlignment="Center" Margin="10,0,0,0" Height="26">Codi:</Label>
        <TextBox VerticalAlignment="Center"  Margin="50,0,70,0" Height="18"></TextBox>
        <Label Grid.Column="1" VerticalAlignment="Center" Margin="10,0,0,0" Height="26">Títol Tasca:</Label>
        <TextBox Grid.Column="1" VerticalAlignment="Center"  Margin="80,0,40,0" Height="18"></TextBox>
        <Label Grid.Row="1">Descripció:</Label>
        <TextBox Grid.Row="1" Grid.ColumnSpan="3" Margin="75,7,40,10" TextWrapping = "Wrap" ></TextBox>
        <Label Grid.Row="2" VerticalAlignment="Center">Data Creació: </Label>
        <TextBox Grid.Row="2" VerticalAlignment="Center" Margin="85,0,30,0"></TextBox>
        <Label Grid.Row="3" VerticalAlignment="Center">Data Finalització:</Label>
        <TextBox Grid.Row="3" VerticalAlignment="Center" Margin="100,0,30,0"></TextBox>
        <Label Grid.Row="2" Grid.Column="1" VerticalAlignment="Center">Prioritat:</Label>
        <TextBox Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" Margin="60,0,260,0"></TextBox>
        <Label Grid.Row="3" Grid.Column="1" VerticalAlignment="Center">Representant:</Label>
        <TextBox Grid.Row="3" Grid.Column="1" VerticalAlignment="Center" Margin="85,0,260,0"></TextBox>
        <Button Grid.Row="4"  Margin="50">Guardar</Button>
        <Button Grid.Row="4" Grid.Column="1" Margin="320,50,50,50">Cancelar</Button>
    </Grid>

</Window>
